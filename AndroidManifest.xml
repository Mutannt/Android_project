<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.myserviceclient">

    <!--  Разрешить подключение к сети Интернет  -->
    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.MyServiceClient"
        android:usesCleartextTraffic="true"> <!-- Разрешить использование незашифрованного трафика -->
        <activity
            android:name=".ActivityLanguage"
            android:exported="false" />
        <activity
            android:name=".ActivityUser"
            android:exported="false" />
        <activity
            android:name=".ActivitySettings"
            android:exported="false" />
        <activity
            android:name=".ActivitySync"
            android:exported="false" />
        <activity
            android:name=".ActivityLanguages"
            android:exported="false" />
        <activity
            android:name=".ActivityUsers"
            android:exported="false" />
        <activity
            android:name=".MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>